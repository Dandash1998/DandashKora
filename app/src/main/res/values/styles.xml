<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FF2D8D</item>        <!-- Pink -->
        <item name="colorPrimaryVariant">#FF2D8D</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#F2F3F7</item> <!-- Light gray -->
        <item name="android:textColorPrimary">#1D1D1D</item>
        <item name="android:textColorSecondary">#777777</item>
    </style>

    <!-- Title text -->
    <style name="TextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body text -->
    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#777777</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">23sp</item>
    </style>
    <style name="NavigationDrawerStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@null</item>
    </style>
    <style name="NavMenuItemStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
        <!-- Transparent fullscreen style for PlayerView container -->






</resources>
